	<script>
		function calculatePrice() {
			const roofSize = parseInt(document.getElementById('roofSize').value);
			const materialType = document.getElementById('materialType').value;
			const complexity = document.getElementById('complexity').value;
			const serviceType = document.getElementById('serviceType').value;
			
			if (!roofSize || !materialType || !complexity || !serviceType) {
				document.getElementById('priceResult').innerHTML = `
					<div class="text-center text-red-500">
						<p class="text-lg mb-4">Please fill in all fields</p>
						<div class="text-4xl mb-4">‚ö†Ô∏è</div>
					</div>
				`;
				return;
			}
			
			let basePrice = 0;
			let materialName = '';
			
			// Set base prices per square foot
			switch(materialType) {
				case 'asphalt':
					basePrice = 10;
					materialName = 'Asphalt Shingles';
					break;
				case 'architectural':
					basePrice = 12.5;
					materialName = 'Architectural Shingles';
					break;
				case 'metal':
					basePrice = 15;
					materialName = 'Metal Roofing';
					break;
				case 'tile':
					basePrice = 18;
					materialName = 'Tile Roofing';
					break;
			}
			
			// Adjust for complexity
			switch(complexity) {
				case 'simple':
					basePrice *= 0.9;
					break;
				case 'moderate':
					// No adjustment
					break;
				case 'complex':
					basePrice *= 1.3;
					break;
			}
			
			// Adjust for service type
			switch(serviceType) {
				case 'replacement':
					// No adjustment
					break;
				case 'repair':
					basePrice = Math.max(500, roofSize * 2); // Minimum $500 for repairs
					materialName = 'Repair Work';
					break;
				case 'overlay':
					basePrice *= 0.7;
					break;
			}
			
			const lowEstimate = Math.round(roofSize * basePrice * 0.85);
			const highEstimate = Math.round(roofSize * basePrice * 1.15);
			
			document.getElementById('priceResult').innerHTML = `
				<div class="text-center">
					<h4 class="text-xl font-bold text-gray-900 mb-2">${materialName}</h4>
					<div class="text-4xl font-bold text-green-600 mb-4">
						$${lowEstimate.toLocaleString()} - $${highEstimate.toLocaleString()}
					</div>
					<p class="text-gray-600 mb-4">${roofSize.toLocaleString()} sq ft ${complexity} roof</p>
					<div class="text-sm text-gray-500">
						<p>*Estimate includes all materials, labor, permits, and cleanup</p>
						<p>Call for detailed quote: (913) 268-6052</p>
					</div>
				</div>
			`;
		}
	</script>
