---
import '../styles/global.css';

export interface Props {
	title: string;
	description?: string;
}

const { title, description = "Professional roofing services in Overland Park, Kansas. Expert roof repairs, replacements, and storm damage restoration." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
	</head>
	<body>
		<nav class="bg-blue-900 text-white shadow-lg">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between h-16">
					<div class="flex items-center">
						<a href="/" class="text-2xl font-bold">Overland Park Roofing</a>
					</div>
					<div class="hidden md:flex items-center space-x-8">
						<a href="/" class="hover:text-blue-200 transition-colors">Home</a>
						<a href="/services" class="hover:text-blue-200 transition-colors">Services</a>
						<a href="/service-areas" class="hover:text-blue-200 transition-colors">Service Areas</a>
						<a href="/about" class="hover:text-blue-200 transition-colors">About</a>
						<a href="/contact" class="hover:text-blue-200 transition-colors">Contact</a>
						<a href="tel:913-268-6052" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded font-semibold transition-colors">
							Call (913) 268-6052
						</a>
					</div>
					<div class="md:hidden flex items-center">
						<button id="mobile-menu-button" class="text-white hover:text-blue-200">
							<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
							</svg>
						</button>
					</div>
				</div>
			</div>
			<div id="mobile-menu" class="md:hidden hidden bg-blue-800">
				<div class="px-2 pt-2 pb-3 space-y-1">
					<a href="/" class="block px-3 py-2 hover:bg-blue-700 rounded">Home</a>
					<a href="/services" class="block px-3 py-2 hover:bg-blue-700 rounded">Services</a>
					<a href="/service-areas" class="block px-3 py-2 hover:bg-blue-700 rounded">Service Areas</a>
					<a href="/about" class="block px-3 py-2 hover:bg-blue-700 rounded">About</a>
					<a href="/contact" class="block px-3 py-2 hover:bg-blue-700 rounded">Contact</a>
					<a href="tel:913-268-6052" class="block mx-3 my-2 bg-red-600 hover:bg-red-700 px-4 py-2 rounded font-semibold text-center">
						Call (913) 268-6052
					</a>
				</div>
			</div>
		</nav>

		<main>
			<slot />
		</main>

		<footer class="bg-gray-800 text-white">
			<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-2xl font-bold mb-4">Overland Park Roofing</h3>
						<p class="text-gray-300 mb-4">Professional roofing services in Overland Park and surrounding Kansas City areas since 1992.</p>
						<div class="text-xl font-semibold text-red-400">
							<a href="tel:913-268-6052">(913) 268-6052</a>
						</div>
					</div>
					<div>
						<h4 class="text-lg font-semibold mb-4">Services</h4>
						<ul class="space-y-2 text-gray-300">
							<li><a href="/services" class="hover:text-white">Roof Repairs</a></li>
							<li><a href="/services" class="hover:text-white">Roof Replacement</a></li>
							<li><a href="/services" class="hover:text-white">Storm Damage</a></li>
							<li><a href="/services" class="hover:text-white">Insurance Claims</a></li>
							<li><a href="/services" class="hover:text-white">Gutters</a></li>
						</ul>
					</div>
					<div>
						<h4 class="text-lg font-semibold mb-4">Service Areas</h4>
						<ul class="space-y-2 text-gray-300">
							<li>Overland Park, KS</li>
							<li>Kansas City, MO</li>
							<li>Leawood, KS</li>
							<li>Olathe, KS</li>
							<li>Shawnee, KS</li>
						</ul>
					</div>
				</div>
				<div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
					<p>&copy; 2025 Overland Park Roofing. All rights reserved.</p>
				</div>
			</div>
		</footer>

		<script>
			const mobileMenuButton = document.getElementById('mobile-menu-button');
			const mobileMenu = document.getElementById('mobile-menu');

			mobileMenuButton?.addEventListener('click', () => {
				mobileMenu?.classList.toggle('hidden');
			});
		</script>
		<script type="module">
			import { inject } from '@vercel/analytics';
			inject();
		</script>
	</body>
</html>